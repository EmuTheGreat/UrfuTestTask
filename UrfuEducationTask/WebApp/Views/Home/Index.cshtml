@{
    ViewBag.Title = "Управление образовательными программами";
}

<ul class="nav nav-tabs" id="mainTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="programs-tab" data-bs-toggle="tab" data-bs-target="#programs" type="button">Программы</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="modules-tab" data-bs-toggle="tab" data-bs-target="#modules" type="button">Модули</button>
    </li>
</ul>

<div class="tab-content mt-3">
    <div class="tab-pane fade show active" id="programs" role="tabpanel">
        <button id="btnAddProgram" class="btn btn-success mb-2">Добавить программу</button>
        <table class="table table-bordered" id="programsTable">
            <thead>
            <tr>
                <th>Название</th><th>Статус</th><th>Шифр</th><th>Институт</th><th>Руководитель</th><th>Аккредитация</th><th>Действия</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="modules" role="tabpanel">
        <button id="btnAddModule" class="btn btn-success mb-2">Добавить модуль</button>
        <table class="table table-bordered" id="modulesTable">
            <thead>
            <tr><th>Название</th><th>Тип</th><th>Уровень</th><th>Стандарт</th><th>Программа</th><th>Действия</th></tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Модальные окна -->
@await Html.PartialAsync("_ProgramModal")
@await Html.PartialAsync("_ModuleModal")