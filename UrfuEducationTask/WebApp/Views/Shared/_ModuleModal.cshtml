<div class="modal fade" id="moduleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="moduleForm">
                <div class="modal-header">
                    <h5 class="modal-title">Модуль</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="ModuleUuid" />
                    <div class="mb-3">
                        <label>Название</label>
                        <input type="text" id="ModuleTitle" class="form-control" required maxlength="200" />
                    </div>
                    <div class="mb-3">
                        <label>Тип</label>
                        <select id="ModuleType" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label>Уровень</label>
                        <select id="ModuleLevel" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label>Стандарт</label>
                        <select id="ModuleStandard" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label>Программа</label>
                        <select id="ModuleProgramId" class="form-select"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>