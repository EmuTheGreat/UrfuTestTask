<div class="modal fade" id="programModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="programForm">
                <div class="modal-header">
                    <h5 class="modal-title">Программа</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="ProgramUuid" />
                    <div class="mb-3">
                        <label>Название</label>
                        <input type="text" id="ProgramTitle" class="form-control" required maxlength="200" />
                    </div>
                    <!-- аналогично Status, Cypher, AccreditationTime -->
                    <div class="mb-3">
                        <label>Институт</label>
                        <select id="ProgramInstituteId" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label>Руководитель</label>
                        <select id="ProgramHeadId" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label>Модули</label>
                        <select id="ProgramModuleIds" multiple class="form-select"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>